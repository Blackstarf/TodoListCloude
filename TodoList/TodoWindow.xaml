<Window x:Class="TodoList.TodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Todo List" Height="650" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Левая колонка: Работа с задачами -->
        <StackPanel Grid.Column="0" Grid.RowSpan="2" Margin="10">
            <!-- Search Section -->
            <StackPanel Margin="0,0,0,10">
                <TextBox x:Name="searchTextBox" Width="200" Margin="0,0,0,5" 
                         
                         Style="{StaticResource InputFieldStyle}"/>
                <Button x:Name="searchButton" Content="Search" Click="SearchButton_Click" 
                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Add/Edit Todo Section -->
            <StackPanel Margin="0,0,0,10">
                <CheckBox x:Name="editModeCheckBox" Content="Режим редактирования" Margin="0,0,0,5"/>

                <TextBox x:Name="taskTitleTextBox" Margin="0,0,0,5" 
                         Text="Название задачи" Style="{StaticResource InputFieldStyle}"/>

                <TextBox x:Name="taskDescriptionTextBox" Margin="0,0,0,10" 
                         Text="Описание" AcceptsReturn="True" 
                         Style="{StaticResource MultiLineInputStyle}"/>

                <Button x:Name="actionButton" Content="Добавить задачу" 
                        Click="ActionButton_Click" Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>

            <!-- Todo List Section -->
            <ListView x:Name="todoListView" Height="400">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Status" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsComplete}" Margin="5"
                                              Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="300"/>
                        <GridViewColumn Header="Действия" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="✏️" Click="EditButton_Click" Style="{StaticResource IconButtonStyle}"/>
                                        <Button Content="❌" Click="DeleteButton_Click" Style="{StaticResource IconButtonStyle}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- Правая колонка: Управление тегами -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Добавление тегов -->
            <GroupBox Header="Управление тегами" Margin="0,0,0,10">
                <StackPanel>
                    <TextBox x:Name="tagNameTextBox" Margin="0,0,0,5" 
                             Text="Новый тег" Style="{StaticResource InputFieldStyle}"/>

                    <Button Content="Добавить тег" Click="AddTagButton_Click" 
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </GroupBox>

            <!-- Список тегов -->
            <GroupBox Header="Мои теги">
                <StackPanel>
                    <ListBox x:Name="tagsListBox" Height="150" Margin="0,0,0,5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Padding="5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="Назначить выбранному заданию" 
                            Click="AssignTagButton_Click" Margin="0,5"
                            Style="{StaticResource SecondaryButtonStyle}"/>

                    <Button Content="Показать задания с этим тегом" 
                            Click="ShowTaggedTasksButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>